{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "@types/node",
      "@types/inquirer"
    ],
    "paths": {
    },
    "lib": [
      "ESNext",
      "ESNext.Array",
      "ESNext.AsyncIterable",
      "ESNext.BigInt",
      "ESNext.Intl",
      "ESNext.Promise",
      "ESNext.String",
      "ESNext.Symbol"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
